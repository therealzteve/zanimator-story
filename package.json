{
  "name": "zanimator-story",
  "version": "1.0.0",
  "description": "A story/timeline module for zanimator animation library",
  "main": "index.js",
  "scripts": {
    "start": "npm run processStaticFiles && tsc && concurrently \"tsc -w\" \"npm run watchStaticFiles\" \"npm run watchLib\" \"lite-server\" ",
    "lite": "lite-server",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "buildLibrary": "gulp default",
    "processStaticFiles": "copyfiles -u 1 editor/**/*.html editor/**/*.css .tmp_editor",
    "watchLib" : "onchange \"app/**/*\" -- npm run buildLibrary",
    "watchStaticFiles": "onchange \"editor/**/*.html\" \"editor/**/*.css\" -- npm run processStaticFiles"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@angular/common": "~2.1.1",
    "@angular/compiler": "~2.1.1",
    "@angular/core": "~2.1.1",
    "@angular/forms": "~2.1.1",
    "@angular/http": "~2.1.1",
    "@angular/platform-browser": "~2.1.1",
    "@angular/platform-browser-dynamic": "~2.1.1",
    "@angular/router": "~3.1.1",
    "@angular/upgrade": "~2.1.1",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.0-beta.12",
    "systemjs": "0.19.39",
    "zone.js": "^0.6.25",
    "zAnimator": "file:../zAnimator"
  },
  "devDependencies": {
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "del": "^1.1.1",
    "almond": "^0.3.2",
    "babel-core": "^6.4.0",
    "gulp-load-plugins": "^0.10.0",
    "vinyl-source-stream": "^1.1.0",
    "bundle-collapser": "^1.2.1",
    "gulp": "^3.9.0",
    "babel-preset-es2015": "^6.3.13",
    "gulp-eslint": "^0.13.2",
    "gulp-babel": "^6.1.1",
    "gulp-sourcemaps": "^1.5.0",
    "gulp-plumber": "^1.0.1",
    "gulp-size": "^1.2.1",
    "babel-register": "^6.18.0",
    "babel-root-import": "^4.0.1",
    "gulp-r": "^1.1.3",
    "gulp-requirejs": "^0.1.3",
    "createjs-easeljs": "^0.8.2",
    "@types/core-js": "^0.9.34",
    "@types/node": "^6.0.45",
    "concurrently": "^3.0.0",
    "copyfiles": "^1.0.0",
    "fs": "0.0.1-security",
    "fs-extra": "^1.0.0",
    "glob": "^7.1.1",
    "lite-server": "^2.2.2",
    "onchange": "^3.0.2",
    "typescript": "^2.0.3"
  },
  "eslintConfig": {
    "fix": true,
    "env": {
      "es6": true,
      "node": true,
      "browser": true,
      "amd": true
    },
    "ecmaFeatures": {
      "modules": true
    },
    "globals": {
      "createjs": true
    },
    "rules": {
      "quotes": [
        2,
        "single"
      ],
      "semi": [
        2,
        "always"
      ],
      "no-underscore-dangle": 0,
      "comma-spacing": 2,
      "no-multi-spaces": "error",
      "space-infix-ops": "error",
      "no-trailing-spaces": "error",
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ],
      "key-spacing": [
        "error",
        {
          "mode": "strict"
        }
      ]
    },
    "parserOptions": {
      "sourceType": "module"
    }
  }
}
